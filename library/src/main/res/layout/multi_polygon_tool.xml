<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingBottom="@dimen/screen_vertical_margin"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content">

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/boundary"
            android:src="@drawable/ic_boundary"
            android:layout_marginLeft="@dimen/fab_vertical_margin"
            android:layout_marginRight="@dimen/fab_vertical_margin"
            android:layout_marginBottom="@dimen/fab_horizontal_margin"
            app:elevation="@dimen/fab_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/hole"
            android:src="@drawable/ic_hole"
            android:layout_marginLeft="@dimen/fab_vertical_margin"
            android:layout_marginRight="@dimen/fab_vertical_margin"
            android:layout_marginBottom="@dimen/fab_horizontal_margin"
            app:elevation="@dimen/fab_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/undo"
            android:src="@drawable/ic_undo"
            android:layout_marginLeft="@dimen/fab_vertical_margin"
            android:layout_marginRight="@dimen/fab_vertical_margin"
            android:layout_marginBottom="@dimen/fab_horizontal_margin"
            app:elevation="@dimen/fab_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_mark_location"
            app:elevation="@dimen/fab_elevation"
            android:layout_marginLeft="@dimen/fab_vertical_margin"
            android:layout_marginRight="@dimen/fab_vertical_margin"
            android:layout_marginBottom="@dimen/fab_horizontal_margin"
            android:layout_height="wrap_content"/>


</LinearLayout>
